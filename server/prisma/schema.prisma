generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  createdAt     DateTime        @default(now())
  email         String          @unique
  password      String
  avatar        String?
  name          String?
  Session       Session[]
  PasswordReset PasswordReset[]
  VoiceNote     VoiceNote[]

  @@map("users")
}

model PasswordReset {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String   
  expiresAt DateTime
  used      Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
}

model Session {
  id        Int      @id @default(autoincrement())
  sessionId String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}


model VoiceNote {
  id            String   @id @default(cuid())
  userId        String
  storagePath   String
  status        VoiceNoteStatus @default(PENDING)
  transcript    String?
  aiResult      Json?
  createdAt     DateTime        @default(now())
  title         String?         // AI-generated, editable later
  tags          String[]        // extracted keywords
  actions       Json?           // AI-suggested tasks (array)  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])
}

enum VoiceNoteStatus {
  PENDING      // uploaded, waiting for AI
  PROCESSING   // AI job running
  DONE         // result ready
  FAILED
}